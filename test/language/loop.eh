void do_something() {}
int main() {
	int i = 3

	while i {
		do_something()
		i = i - 1
	}

	i = 3
	while i
		i = i - 1

	do
		i++
	while i < 10

	do {
		do_something()
		i--
	} while i > 0

	for i = 0 do i++ while i < 5 {
		do_something()
		++i
	}

	for int j = 0, i = 10 do j++, i--, do_something() while i > 5 && j < 2
		do_something()

	return 0
}
